@model ProjetoMvc.Models.Contato

@{
    ViewData["Title"] = "Editar contato";
}

<h1>Editar contato</h1>

<hr>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div class="form-group">
                <label asp-for="Nome" class="control-lable"></label>
                <input asp-for="Nome" class="form-control">
            </div>
            <div class="form-group mt-3">
                <label asp-for="Telefone" class="control-lable"></label>
                <input asp-for="Telefone" class="form-control">
            </div>
            <div class="form-group mt-3">
                <label asp-for="Email" class="control-lable"></label>
                <input asp-for="Email" class="form-control">
            </div>
            <div class="form-group mt-3">
                <label asp-for="Ativo" class="control-lable"></label>
                <input type="checkbox" asp-for="Ativo" class="form-checkbox-input" />
            </div>
            <br>
            <div class="form-group mt-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary"> Voltar</a>
            </div>
        </form>
    </div>
</div>